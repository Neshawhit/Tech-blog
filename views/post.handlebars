<div class="userPost">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
         Created: {{post.date_created}} by {{post.user.name}}
      </div>
    </div>
    <div class="card-body">
   
      <p class="text-dark">{{post.content}}</p>
 
    </div>
  </article>

  {{#if post.comments}}
  {{#each posts.comments}}
  <section class="card">
    <div class="card-body">
      <div>
        <p>
          {{text}}
        </p>
        <p>
          &mdash; {{user.name}}, {{date_created}}
        </p>
      </div>
    </div>
  </section>
  {{/each}}
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="userPost-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" id="text" class="form-input"></textarea>

      <button type="submit" class="btn "id ="post-contents">Submit</button>
    </div>
  </form>
</div>

