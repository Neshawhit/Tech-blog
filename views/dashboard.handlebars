<div>
    <h1>Dashboard</h1>
</div>
<div>
    <form class="blog">
        <input  id="title" name="title" type="text" placeholder="Blog Title">
        <input type="text" name="userpost_content" id="content" placeholder="Blog Post">
        <button id="btn primary " type="submit">Submit</button>
    </form>
</div class="text-light bg-secondary">
{{#each posts}}
<h2>{{title}}</h2>
<p>
    {{userpost_content}}
</p>
{{/each}}


