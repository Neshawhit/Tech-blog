        <button id="btn primary " type="submit">Submit</button>
    </form>
</div>

<div id="post" >
  {{#each posts}}

    <div  class="container bg-dark text-light mb-4 ">
       <div class="row d-flex justify-content-between"> 
            <h2 class="ml-2">
                
                <a href="/post/{{id}}"> 
                    {{title}}
                </a>
                <p>{{content}}</p>
            </h2>
            <p class="mr-2" for="date">{{date_created}}</p>
        </div>
    </div>
    {{/each}}
